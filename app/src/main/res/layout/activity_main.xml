<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fowlj.myappportfolio.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps"
            android:id="@+id/titleTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POPULAR MOVIES"
            android:id="@+id/popularMoviesButton"
            android:layout_below="@+id/titleTextView"
            android:layout_alignLeft="@+id/titleTextView"
            android:layout_alignStart="@+id/titleTextView"
            android:layout_alignRight="@+id/titleTextView"
            android:layout_alignEnd="@+id/titleTextView"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOCK HAWK"
            android:id="@+id/stockHawkButton"
            android:layout_below="@+id/popularMoviesButton"
            android:layout_alignRight="@+id/popularMoviesButton"
            android:layout_alignEnd="@+id/popularMoviesButton"
            android:layout_alignLeft="@+id/popularMoviesButton"
            android:layout_alignStart="@+id/buildItBiggerButton"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buildItBiggerButton"
            android:layout_below="@+id/stockHawkButton"
            android:layout_alignRight="@+id/popularMoviesButton"
            android:layout_alignEnd="@+id/popularMoviesButton"
            android:layout_alignLeft="@+id/popularMoviesButton"
            android:layout_alignStart="@+id/popularMoviesButton"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE YOUR APP MATERIAL"
            android:id="@+id/makeYourAppMaterialButton"
            android:layout_below="@+id/buildItBiggerButton"
            android:layout_alignRight="@+id/buildItBiggerButton"
            android:layout_alignEnd="@+id/buildItBiggerButton"
            android:layout_alignLeft="@+id/buildItBiggerButton"
            android:layout_alignStart="@+id/buildItBiggerButton"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO UBIQUITOUS"
            android:id="@+id/goUbiquitousButton"
            android:layout_below="@+id/makeYourAppMaterialButton"
            android:layout_alignRight="@+id/popularMoviesButton"
            android:layout_alignEnd="@+id/makeYourAppMaterialButton"
            android:layout_alignLeft="@+id/popularMoviesButton"
            android:layout_alignStart="@+id/makeYourAppMaterialButton"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPSTONE"
            android:id="@+id/capstoneButton"
            android:layout_below="@+id/goUbiquitousButton"
            android:layout_alignRight="@+id/popularMoviesButton"
            android:layout_alignEnd="@+id/goUbiquitousButton"
            android:layout_alignLeft="@+id/popularMoviesButton"
            android:layout_alignStart="@+id/goUbiquitousButton"
            android:onClick="buttonClicked" />
    </RelativeLayout>
</RelativeLayout>
